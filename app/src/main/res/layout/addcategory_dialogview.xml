<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Select One"
       android:textColor="@android:color/black"
       android:layout_gravity="center"
       android:layout_marginTop="20dp"
       android:textAppearance="?android:attr/textAppearanceMedium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/layout_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:singleLine="true"
                android:textColor="#fc942b"
                />

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/location_category"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_location"
                />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#1A000000"></View>
        <RelativeLayout
            android:id="@+id/layout_hashtag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_hashtag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hashtag"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:singleLine="true"
                android:textColor="#fc942b"
                />

            <ImageView
                android:id="@+id/iv_hashtag"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/addhashcategory"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_hashtag"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
